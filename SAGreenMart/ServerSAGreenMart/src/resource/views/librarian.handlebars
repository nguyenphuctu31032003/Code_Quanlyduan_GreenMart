<div class="container mt-4">
    <div id="success-message" class="success-message"></div>
    <div class="search-bar">
        <input type="text" id="search-input" placeholder="Nhập từ khóa tìm kiếm">
    </div>
    <div class="item-container row">
        {{#each librarians}}
            <div class="item">
                <div class="item2" data-id="{{this._id}}" onclick="location.href='/librarians/{{this.slug}}';">
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/librarians/{{this.slug}}">
                                <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="item-content">
                                <button class="delete-button" data-id="{{this._id}}"><i class="fas fa-times"></i></button>
                                <p class="item-title">{{this.name}}</p>
                                <p class="item-phone"><strong>Số Điện Thoại: </strong> {{this.phone}}</p>
                                <div class="item-information">
                                    <p class="mb-0"><strong>Ngày Sinh: </strong> {{this.date_of_birth}}</p>
                                    <p class="mb-0"><strong>Địa Chỉ: </strong> {{this.address}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        {{/each}}
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="confirmation-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa sách</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa sách này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-danger" id="confirm-delete">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Lấy tất cả các nút X
    const deleteButtons = document.querySelectorAll('.delete-button');

    // Xử lý sự kiện khi click vào nút X
    deleteButtons.forEach(button => {
        button.addEventListener('click', function(event) {
            event.stopPropagation(); // Ngăn chặn sự kiện click từ lan ra các phần tử cha
            // Lấy ID của mục cần xóa từ thuộc tính data-id
            const itemId = this.getAttribute('data-id');
            // Hiển thị modal dialog
            $('#confirmation-modal').modal('show');
            let itemToDeleteId = itemId;
            // Xử lý sự kiện click trên nút xóa
            document.getElementById('confirm-delete').addEventListener('click', function() {
                event.preventDefault(); // Ngăn trình duyệt tải lại trang

                // Gửi yêu cầu xóa bằng Ajax
                fetch('/librarians/' + itemToDeleteId + '/delete', {
                    method: 'DELETE',
                })
                        .then(response => {
                            if (response.ok) {
                                const successMessage = document.getElementById('success-message');
                                successMessage.textContent = 'Xóa thành công';
                                successMessage.style.display = 'block';

                                // Tự động ẩn thông báo sau 1s
                                setTimeout(function() {
                                    successMessage.style.display = 'none';
                                    location.reload()
                                }, 1500);
                            } else {
                                console.error('Error:', response.status);
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });

                // Đóng modal dialog
                $('#confirmation-modal').modal('hide');
            });
        });
    });

</script>
<script>
    const items = document.querySelectorAll('.item');

    document.getElementById('search-input').addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase();

        items.forEach(item => {
            const title = item.querySelector('.item-title').textContent.toLowerCase();

            if (title.includes(searchTerm)) {
                item.style.display = 'block';
            } else {
                item.style.display = 'none';
            }
        });
    });
</script>
