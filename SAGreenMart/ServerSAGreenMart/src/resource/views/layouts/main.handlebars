<script>
    function setActiveLink(index) {
        var navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(function(link) {
            link.classList.remove('active');
        });

        // Add the 'active' class to the clicked nav link
        navLinks[index].classList.add('active');

        // Store the active link index in sessionStorage
        sessionStorage.setItem('activeLinkIndex', index);
    }

    // Retrieve the active link index from sessionStorage on page load
    document.addEventListener('DOMContentLoaded', function() {
        var activeLinkIndex = sessionStorage.getItem('activeLinkIndex');

        if (activeLinkIndex !== null) {
            // Set the active state for the stored link index
            setActiveLink(parseInt(activeLinkIndex));
        }
    });

</script>

